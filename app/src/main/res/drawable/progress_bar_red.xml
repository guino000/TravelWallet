<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="#B0BEC5"
                android:centerColor="#CFD8DC"
                android:centerY="0.75"
                android:endColor="#ECEFF1"
                android:angle="270"
                />
            <corners
                android:radius="10dp"
                />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#f44336"
                    android:centerColor="#ef5350"
                    android:centerY="0.75"
                    android:endColor="#e57373"
                    android:angle="270"
                    />
                <corners
                    android:radius="10dp"
                    />
            </shape>
        </clip>
    </item>
</layer-list>